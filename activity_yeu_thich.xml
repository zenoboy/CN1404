<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Phần trên cùng: Yêu thích và nút quay lại -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Nút quay lại -->
        <Button
            android:id="@+id/buttonQuayLai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quay lại" />

        <!-- Tiêu đề "Yêu thích" -->
        <TextView
            android:id="@+id/textViewYeuThich"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yêu thích"
            android:textSize="30sp"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Danh sách các món ăn yêu thích -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Món ăn yêu thích 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/anngon">


                <!-- Tên món ăn -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Món ăn yêu thích 1"
                    android:textSize="18sp" />

                <!-- Mô tả món ăn hoặc các thông tin khác -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả món ăn yêu thích 1"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Món ăn yêu thích 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/anngon">

                <!-- Tên món ăn -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Món ăn yêu thích 2"
                    android:textSize="18sp" />

                <!-- Mô tả món ăn hoặc các thông tin khác -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả món ăn yêu thích 2"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Món ăn yêu thích 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="8dp"
                android:background="@drawable/anngon">

                <!-- Tên món ăn -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Món ăn yêu thích 3"
                    android:textSize="18sp" />

                <!-- Mô tả món ăn hoặc các thông tin khác -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả món ăn yêu thích 3"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
